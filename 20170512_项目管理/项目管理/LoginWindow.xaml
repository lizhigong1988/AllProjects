<Window x:Class="项目管理.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录管理系统"
        Width="389"
        Height="279"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="/项目管理;component/StyleSource/CommonSource.xaml" />
    </Window.Resources>
    <Canvas>
        <StackPanel Canvas.Left="82" Canvas.Top="144">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="用户姓名" />
                <TextBox Name="tbUserName" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="用户密码" />
                <PasswordBox Name="tbUserPsw" KeyDown="tbUserPsw_KeyDown" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Name="btnLogin"
                        Click="btnLogin_Click"
                        Content="登录" />
                <Button Name="btnCancel"
                        Click="btnCancel_Click"
                        Content="取消" />
            </StackPanel>
        </StackPanel>
    </Canvas>
</Window>
