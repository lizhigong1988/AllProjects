<Window x:Class="批量发邮件.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Width="800"
        Height="600">

    <Canvas>
        <StackPanel Width="795">
            <StackPanel Margin="0 10" Orientation="Horizontal">
                <TextBox Name="tbFile"
                         Width="367"
                         HorizontalAlignment="Left"
                         IsEnabled="False" />
                <Button Name="btnChoose"
                        Width="101"
                        Height="30"
                        Margin="10 0 0 0"
                        Click="btnChoose_Click"
                        Content="选择文件" />
            </StackPanel>
        </StackPanel>
        <StackPanel />
        <DataGrid Name="databox"
                  Canvas.Left="0"
                  Canvas.Top="79"
                  Width="778"
                  Height="438" />
        <Button Name="btnSend"
                Canvas.Left="706"
                Canvas.Top="523"
                Width="60"
                Height="26"
                Click="btnSend_Click"
                Content="发送" />
    </Canvas>
</Window>
